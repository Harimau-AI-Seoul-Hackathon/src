{
  "type": "json_schema",
  "json_schema": {
    "name": "document_schema",
    "schema": {
      "type": "object",
      "properties": {
        "incidentDate": {
          "type": "array",
          "items": {
            "type": "string",
            "description": "The date when the incident occurred."
          }
        },
        "affectedRegions": {
          "type": "array",
          "items": {
            "type": "string",
            "description": "Names of the regions affected by the incident."
          }
        },
        "supportActions": {
          "type": "array",
          "items": {
            "type": "string",
            "description": "Description of support actions taken."
          }
        },
        "casualties": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "total": {
                "type": "integer",
                "description": "Total number of casualties."
              },
              "deceased": {
                "type": "integer",
                "description": "Number of deceased individuals."
              },
              "injured": {
                "type": "integer",
                "description": "Number of injured individuals."
              }
            },
            "required": [
              "total",
              "deceased",
              "injured"
            ]
          }
        },
        "damageAssessment": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "totalStructuresDamaged": {
                "type": "integer",
                "description": "Total number of structures damaged."
              },
              "residentialBuildings": {
                "type": "integer",
                "description": "Number of residential buildings affected."
              },
              "agriculturalFacilities": {
                "type": "integer",
                "description": "Number of agricultural facilities affected."
              },
              "culturalHeritage": {
                "type": "integer",
                "description": "Number of cultural heritage sites affected."
              }
            },
            "required": [
              "totalStructuresDamaged",
              "residentialBuildings",
              "agriculturalFacilities",
              "culturalHeritage"
            ]
          }
        },
        "evacuationDetails": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "totalEvacuated": {
                "type": "integer",
                "description": "Total number of individuals evacuated."
              },
              "temporaryShelters": {
                "type": "integer",
                "description": "Number of temporary shelters established."
              }
            },
            "required": [
              "totalEvacuated",
              "temporaryShelters"
            ]
          }
        }
      },
      "required": [
        "incidentDate",
        "affectedRegions",
        "supportActions",
        "casualties",
        "damageAssessment",
        "evacuationDetails"
      ]
    }
  }
}